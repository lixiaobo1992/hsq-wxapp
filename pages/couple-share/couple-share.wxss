.count-time{
  display: inline-block;
}
.count-time .time-num{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  background-color: #212121;
  color: #fff;
  border-radius: 6rpx;
  margin: 0 5rpx;
}

.text-share{
  margin-bottom: 30rpx; 
  color: #212121;
  font-size: 36rpx;
  line-height: 54rpx;
  text-align: center;
}
.text-share .text-red{
  color: #ed0000;
}
.avatar-list{
  min-height: 50rpx;
  width: 100%;
  padding-bottom:30rpx;
}
.is-winner{
  position:absolute;
  bottom:-6rpx;
  left:5%;
  width:90%;
  text-align:center;
  background-color:#fc5759;
  border-radius:20rpx;
  color:#fff;
  font-size:20rpx;
}
.share-btn{
  padding: 0rpx 20rpx;
}
.share{
  height: 80rpx;
  background: red;
  color: white;
  line-height: 80rpx;
  font-size: 34rpx;
}
.couple-rules{
  background-color: #fff;
  /* margin-bottom: 20rpx; */
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #b4b4b4;
  text-align: center;
  border-top: 2rpx solid #e4e4e4;
}
.couple-rules .link-rule{
  color: #0e90d2;
  padding-left: 10rpx;
}
.is-join{
  background-color: #fff;
}
swiper{
  height: 100%;
}
.share-swiper{
  height: 400rpx;
}
.swiper-item{
  display: flex;
  justify-content: center;
}
.share-swiper .swiper-img{
  height: 400rpx;
}
.share-title{
  font-size: 28rpx;
  font-weight: 700;
  line-height: 36rpx;
  margin-bottom: 20rpx;
}
.info-line{
  font-size: 24rpx;
  color: #b4b4b4;
}
.couple-price{
  font-size: 40rpx;
  color: #ed0000;
  margin-right: 10rpx;
}
.del-num{
  margin-left: 6rpx;
  text-decoration: line-through;
}
.expired-detail{
  color: #b4b4b4;
  font-size: 24rpx;
  margin-top: 10rpx;
  line-height: 36rpx;
}
.services-list{
  display: flex;
  font-size: 24rpx;
  color: #959595;
  flex-wrap: nowrap;
  background-color: #fafaf8;
  padding: 20rpx;
}
.label-item{
  flex: 1;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
}
.label-item image{
  margin-right: 10rpx;
}
.label-icon{
  width: 30rpx;
  height: 30rpx;
}
.label-text{
  line-height: 40rpx;
  white-space: nowrap;
}
.states-icon{
    position: absolute;
    right: 40rpx;
    top: 40rpx;
    width: 160rpx;
    height: 120rpx;
    z-index: 2;
}
.avatar-list{
  text-align: center;
  /* margin-bottom: 30rpx; */
  overflow: hidden;
}
.user-avatar{
  display: inline-block;
  width: 17%;
  text-align: center;
  position: relative;
}
.user-avatar image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 1000rpx;
}
.user-avatar .add-icon{
  position: absolute;
  top: 0;
  right: 4rpx;
  width: 30rpx;
  height: 30rpx;
}
.more-than-5{
  text-align: left;
}
.text-btn{
  float: right;
  padding: 10rpx 30rpx;
  margin-right: 40rpx;
  font-size: 24rpx;
}
.view-tip {
  display: flex;
  position: relative;
  width: 100%;
  height: 100rpx;
  background-color: rgb(250, 250, 248);
  justify-content: center;
  align-items: center;
}

.view-tip .tip-line {
  width: 100%;
  margin: 0 60rpx;
  height: 1px;
  background-color: #e2e2e2;
}

.view-tip .tip-title {
  position: absolute;
  left: 50%;
  top: 0;
  margin-left: -100rpx;
  width: 200rpx;
  line-height: 100rpx;
  font-size: 24rpx;
  color: rgb(153, 153, 153);
  text-align: center;
  background-color: rgb(250, 250, 248);
}
.fixed_footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  background-color: rgba(60,60,60,.55);
  text-align: center;
  padding: 14rpx 0;
}
.order-buy{
  width:80%;
  margin-left:10%;
  background-color:#ed0000;
  border-radius:6rpx;
  text-align:center;
  font-size:36rpx;
  line-height:86rpx;
  color:#fff;
  height:100%;
  display:flex;
  justify-content:center;
  flex-direction:column;
}
