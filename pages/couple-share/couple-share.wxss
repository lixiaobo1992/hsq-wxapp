/* pages/couple-share/couple-share.wxss */
@import '/components/card/index.wxss';
.page-couple-share{
  height: 100%;
}
.page-couple-share-content{
  z-index: 1;
}
.share-page{
   padding-bottom: 130rpx; 
}
.goto-detail{
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 20rpx 40rpx 20rpx 20rpx;
  position: relative;
  font-size: 24rpx;
  color: #212121;
  background-color: #fff;
  margin-top: 20rpx;
  border-bottom: 2rpx solid #E2E2E2;
}
.goto-detail .more-icon{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -16rpx;
}
.share-desc{
  padding: 30rpx 20rpx 20rpx;
  background-color: #fff;
  position: relative;
}
.couple-go-home{
  width: 80rpx;
  height: 80rpx;
  border-radius: 1000rpx;
  background-color: rgba(60,60,60,.55);
  z-index: 103;
  position: fixed;
  right: 20rpx;
  bottom: 150rpx;
}
.couple-go-home .home-icon{
  height: 58%;
  width: 62%;
  margin-top: 20%;
  margin-left: 19%;
}
.count-down{
   /* margin: 0 60rpx 40rpx 60rpx;  */
  font-size: 24rpx;
  height: 54rpx;
  color: #959595;
  position: relative;
  display: flex;
  width: 100%;
  justify-content: center;
}
.count-down .remainder{
  padding-right: 12rpx;
}
.count-down .over{
  padding-left: 12rpx;
}
