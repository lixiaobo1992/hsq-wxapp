/* pages/couple-search-list/couple-search-list.wxss */

@import '/components/card/index.wxss';
@import '/components/foot/foot.wxss';
@import '/components/pull-loading/index.wxss';
@import '/components/swiper/swiper.wxss';


page {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}
.page-search-result{
  height: 100%;
}
.container{
  height: 100%;
  padding-top: 88rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}
scroll-view {
  height: 100%;
}

.view-tab {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
}

.tab1 {
  position: absolute;
  left: 0;
  top: 0;
  height: 88rpx;
}

/* 综合排序、销量  */
.tab {
  font-size:28rpx;
  position: fixed;
  top:0;
  left:0;
  display: flex;
  width: 100%;
  height: 88rpx;
  background-color: white;
  text-align: center;
  align-items: center;
  z-index: 100;
  border-top: 1px solid rgb(226, 226, 226);
  border-bottom: 1px solid rgb(226, 226, 226);
}

.tab-sub {
  width: 50%;
  height: 100%;
  display: flex;
  text-align: center;
  align-items: center;
}

 .view-tap {
  width: 100%;
  border-right: 1px solid rgb(226, 226, 226);
  display:flex;
  justify-content:center;
  align-items:center;
}

.no-border{
  border: none;
  padding:0 20rpx;
}
.no-border .bottom, .no-border .top {
  margin-top: -5rpx;
}

.img-block{
  height:60rpx;
  justify-content:center;
  width:16rpx;
  position:relative;
  flex-shrink:0;
}
.empty-img {
  height: 360rpx;
}
.sub-title {
  font: 28rpx;
  color: #666;
  text-overflow:ellipsis;
  word-break:break-all;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
  overflow:hidden;
}

.sub-title-red {
  color: rgb(237, 0, 0);
}

.sub-img {
  width: 16rpx;
  height: 10rpx;
  margin-left: 4rpx;
  /* margin-bottom: 8rpx; */
}
.top{
  transform:scaleY(-1);
  position:absolute;
  top:50%;
  margin-top:-10rpx;
  left:6rpx;
}
.bottom{
  position:absolute;
  top:50%;
  left:6rpx;
  margin-top:2rpx;
}
/* 综合排序、价格从高到低、价格从低到高  */
.view-sort {
  height: 100%;
  width: 100%;
  padding-top: 88rpx;
}

.bg-alpha {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.5);
  height: 100%;
  width: 100%;
}

.sort {
  position: relative;
  line-height: 88rpx;
  border-bottom: 1px solid rgb(226, 226, 226);
  background-color: white;
  padding-left: 30rpx;
  z-index: 90;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sort-title {
  font-size: 28rpx;
  color: rgb(153, 153, 153);
}

.sort-title-red {
  color: rgb(237, 0, 0);
}

.sort-img {
  width: 30rpx;
  height: 22rpx;
  margin-right: 30rpx;
}

.view-list {
  position: relative;
}
.category-list{
  background-color:#fff;
  display:flex;
  padding:30rpx 30rpx 0 30rpx;
  color:#666;
  font-size:28rpx;
  flex-wrap:wrap;
  justify-content: space-around;
}
.more-oneline{
  justify-content: flex-start;
}
.category-item-block{
  width: 25%;
  display: flex;
  justify-content: center;
}
.category-item{
  width:150rpx;
  height:60rpx;
  text-align:center;
  line-height:60rpx;
  background-color:#f5f5f9;
  border-radius:6rpx;
  flex-shrink:0;
  margin-bottom:30rpx;
  border: 1px solid #f5f5f9;
  overflow: hidden;
}
.active{
  color: #ed0000;
  border: 1px solid #ed0000;
  background-color: #f9f9fa;
}
.no-active{
  color: #DDD;
}
.list-text {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
}
.chn-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.eng-text {
  font-size: 24rpx;
  color: #ccc;
}
