
@import '/components/coupon-toast/index.wxss';

page {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.page-shopping-cart{
  height: 100%;
}
.page-shopping-cart-content{
  z-index: 1;
}
.shopping-cart{
  position: relative;
}

.shopping-cart.is-footer{
  padding-bottom: 100rpx;
}

.header-edit{
  display: flex;
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  padding: 0 40rpx;
  border-bottom: 1px solid #e1e1e1;
  background-color: #fff;
}
.header-edit .product-number{
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.header-edit .edit-btn{
  width: 100rpx;
  font-size: 28rpx;
  text-align: right;
  color: #F21833;
}

.shopping-cart-content{
  position: relative;
  height: 100%;
}

/* 有效商品 */
.effective-product{}


.select-icon{
  width: 32rpx;
  height: 32rpx;
  background: url('https://img1.haoshiqi.net/miniapp/img/no-select_f313773269.png') no-repeat center center;
  background-size: 100% 100%;
}
.select-icon.active{
  background-image: url('https://img1.haoshiqi.net/miniapp/img/select_02ca08783b.png');
}


.merchant-item{
  width: 100%;
  background-color: #fff;
  position: relative;
  margin-bottom: 20rpx;
}

.merchant-item .merchant-info{
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx 0 24rpx;
}

.merchant-info .merchant-name{
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 20rpx;

}
.merchant-info .merchant-name .merchant-icon{
  width: 32rpx;
  height: 32rpx;
  line-height: 0;
}
.merchant-info .merchant-name .merchant-icon  image{
  width: 100%;
  height: 100%;
}
.merchant-info .merchant-name .merchant-name-text{
  font-size: 14px;
  color: #333333;
  margin-left: 10rpx;
  font-weight: bold;
}
.merchant-info .merchant-name .right-arrow{
  background: url('https://img1.haoshiqi.net/miniapp/more_85508a3b09.png') no-repeat center center;
  background-size: 100% 100%;
  margin-left: 6rpx;
  width: 32rpx;
  height: 32rpx;
}
.merchant-info .collar-btm{
  font-size: 14px;
  color: #333333;
}


.merchant-activity-list{
  width: 100%;
  position: relative;
}

.merchant-activity-list .merchant-activity-item{
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
}
.merchant-activity-list .merchant-activity-item::after{
  content: '';
  display: block;
  width: 100%;
  position: absolute;
  left: 24rpx;
  top: 0;
  border-top: 1rpx solid #e2e2e2;
  height: 0;
}

.merchant-activity-list .merchant-activity-item:first-child{
  padding-top: 0;
}
.merchant-item .merchant-activity-item:first-child::after{
  display: none;
}

/* 活动 header */
.merchant-activity-header{
  display: flex;
  align-items: center;
  padding: 0rpx 32rpx 0 68rpx;
  margin-bottom: 10rpx;
}

.merchant-activity-header .activity-tag{
  border: 1rpx solid #EA594C;
  border-radius: 4rpx;
  font-size: 22rpx;
  line-height: 28rpx;
  color: #EA594C;
  padding: 2rpx 5rpx;
  display: inline-block;
  vertical-align: middle;
}
.merchant-activity-header .activity-desc{
  font-size: 24rpx;
  color: #666666;
  margin-left: 10rpx;
  flex: 1;
  margin-right: 20rpx;
}
.merchant-activity-header .activity-desc .red{
  color: #F21833;
}
.merchant-activity-header .activity-btn{
  font-size: 24rpx;
  color: #F21833;
  display: flex;
  align-items: center;
}
.merchant-activity-header .activity-btn text{
  line-height: 20rpx;
}
.merchant-activity-header .activity-btn  .right-arrow{
  background: url('https://img1.haoshiqi.net/miniapp/red-arrow_fb0b2184a1.png') no-repeat center center;
  background-size: 100% 100%;
  margin-left: 6rpx;
  width: 20rpx;
  height: 20rpx;
}


.sku-product-list{
  position: relative;
  overflow: hidden;
}

.sku-product-list .sku-product-item-box{
  position: relative;
  padding: 10rpx 0;
  margin-bottom: 10rpx;
}

.sku-product-item-swiper{
  overflow: visible !important;
}

.sku-activity-header{
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  margin: 0rpx 0 20rpx 0;
}
.sku-activity-header .activity-tag{
  border: 1rpx solid #EA594C;
  border-radius: 4rpx;
  font-size: 22rpx;
  line-height: 28rpx;
  color: #EA594C;
  padding: 2rpx 5rpx;
  display: inline-block;
}
.sku-activity-header .activity-desc{
  font-size: 24rpx;
  color: #666666;
  margin:0 20rpx 0 10rpx;
  flex: 1;
}

.sku-activity-header .activity-desc .red{
  color: #F21833;
}

.sku-activity-header .right-arrow{
  background: url('https://img1.haoshiqi.net/miniapp/more_85508a3b09.png') no-repeat center center;
  background-size: 100% 100%;
  margin-left: 6rpx;
  width: 32rpx;
  height: 32rpx;
}


.sku-product-item{
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  padding: 0rpx 32rpx 0rpx 24rpx;
  background-color: #fff;
}

.sku-product-item .sku-product-item-content{
  flex: 1;
  position: relative;
  overflow: hidden;
  margin-left: 20rpx;

  padding: 20rpx;

  box-shadow: 0 2rpx 10rpx 0 rgba(0,0,0,0.10);
  border-radius: 6rpx;
}

.sku-product-content{
  position: relative;
  display: flex;
  overflow: hidden;
  width: 100%;
}

.sku-product-content .sku-img{
  width: 180rpx;
  height: 180rpx;
}
.sku-product-content .sku-img image{
  width: 100%;
  height: 100%;
}
.sku-product-content .sku-item-content{
  flex: 1;
  overflow: hidden;
  margin-left: 10px;
  position: relative;
}

.sku-item-content .sku-title{
  font-size: 24rpx;
  color: #333333;
  line-height: 34rpx;
  height: 68rpx;
}
.sku-item-content .sku-title .sku-tag{
  display: inline-block;
  color: #fff;
  background: #EA594C;
  line-height: 28rpx;
  font-size: 20rpx;
  padding: 0 4rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}
.sku-item-content .sku-attr{
  width: 60%;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 10rpx;
  background-color: #f9f9f9;
  position: relative;
  padding-right: 30rpx;
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.sku-item-content .sku-attr .down-arrow{
  display: inline-block;
  background: url('https://img1.haoshiqi.net/miniapp/more_85508a3b09.png') no-repeat center center;
  background-size: 100% 100%;

  transform: rotate(90deg);
  width: 16rpx;
  height: 20rpx;
  position: absolute;
  top: 8rpx;
  right: 10rpx;
  margin-left: 5rpx;
}

.sku-item-content .sku-price-sum{
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  justify-content: space-between;
}

.sku-item-content .sku-price-sum .sku-price{
  font-size: 32rpx;
  color: #F21833;
  flex: 1;
  font-weight:bold;
}
.sku-item-content .sku-price-sum .sku-input{
}

.sku-item-content .purchase-limit-tip{
  line-height: 24rpx;
  font-size: 20rpx;
  color: #FF9B29;
  text-align:right;
}



/* sku right */

.dwd-swipe-right{
  display: flex;
  height: 100%;
  color: #fff;
  text-align: center;
  position: absolute;
  width: 280rpx;
  /* right: -280rpx; */
  display: table;
}

.dwd-swipe-right .dwd-swipe-btn{
  width: 140rpx;
  height: 100%;
  font-size: 28rpx;
  word-break:normal;
  vertical-align:middle;
  padding: 0 20rpx;
  background: #ccc;
  display: table-cell;
}


/* 失效商品 */
.invalid-product{
  background-color: #fff;
}


.shopping-cart-footer{
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  align-items: center;
  box-shadow: 0 1rpx 5rpx #eee;
}
.shopping-cart-footer .all-select-box{
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.shopping-cart-footer .all-select-box .select-icon{
  width: 32rpx;
  height: 32rpx;
  background: url('https://img1.haoshiqi.net/miniapp/img/no-select_f313773269.png') no-repeat center center;
  background-size: 100% 100%;
}
.shopping-cart-footer .all-select-box .select-icon.active{
  background-image: url('https://img1.haoshiqi.net/miniapp/img/select_02ca08783b.png');
}
.shopping-cart-footer .all-select-box .select-text{
  font-size: 28rpx;
  padding-left: 20rpx;
}

.shopping-cart-footer .total-price{
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-right: 26rpx;
  text-align: right;
}
.shopping-cart-footer .total-price .price-text{
  color: #F21833;
  font-weight: bold;
  margin-left: 10rpx;
}
.shopping-cart-footer .footer-btn{
  width: 220rpx;
  background: #f21833;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 106rpx;
}



/* 购物车为空 */
.shopping-cart-content .content-null{
  width: 100%;
  overflow: hidden;
}
.shopping-cart-content .null-img{
  display: block;
  width: 500rpx;
  height: 260rpx;
  margin: 0 auto;
  margin-top: 100rpx;
}
.shopping-cart-content .null-title{
  margin-top: 60rpx;
  font-size: 32rpx;
  color: #666;
  text-align: center;
}
.shopping-cart-content .null-text{
  margin-top: 10rpx;
  color: #ccc;
  font-size: 28rpx;
  text-align: center;
}
.shopping-cart-content .null-btn{
  width: 230rpx;
  height: 64rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  background: #ff002b;
  line-height: 64rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  border-radius: 64rpx;
}

/* 弹层 */
.popup-outbox,.overlay {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 120;
}

/* 会员价 */
.sku-price-sum  .member-price{
  display:flex;
  flex-direction: row;
  align-items: center;
}
.member-price .member-icon{
  width:28rpx;
  height:28rpx;
}
.member-price .member-sku-price{
  font-size: 32rpx;
  color: #333333;
  margin-left:6rpx;
  font-weight:500;
}
