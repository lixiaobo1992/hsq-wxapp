.header {
  display: flex;
  height: 80rpx;
  position: relative;
  z-index: 1;
}

.search {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding-top: 0;
}
.search .sub-view{
  flex: 1;
}
.view-image {
  position: relative;
  width: 100%;
  padding-top: 54.7%;
}

.view-image image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.view-activty-bg {
  background-color: rgb(226,226,226);
}
.view-activty {
  position: relative;
  overflow: hidden;
  width: 100%;
}
.view-tip {
  display: flex;
  position: relative;
  width: 100%;
  height: 100rpx;
  background-color: rgb(250, 250, 248);
  justify-content: center;
  align-items: center;
}

.view-tip .tip-line {
  width: 100%;
  margin: 0 30rpx;
  height: 1px;
  background-color: #e2e2e2;
}

.view-tip .tip-title {
  position: absolute;
  left: 50%;
  top: 0;
  margin-left: -100rpx;
  width: 200rpx;
  line-height: 100rpx;
  font-size: 24rpx;
  color: rgb(153, 153, 153);
  text-align: center;
  background-color: rgb(250, 250, 248);
}

