.new-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999;
}

.new-container {
  background-color: #fff;
  z-index: 1000;
  position: fixed;
  left: 0;
  width: 100%;
  bottom: -100%;
  height: 50%;
  transition: bottom 0.5s;
  font-size: 28rpx;
  color: rgb(33, 33, 33);
}

.new-container-ani{
  bottom: 0%;
}

.container-title {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  margin: 0 30rpx;
  border-bottom: 1px solid rgb(226, 226, 226);
  font-size: 32rpx;
  color: black;
  position: relative;
}
.img-box{
  width:40rpx;
  height:40rpx;
  position: absolute;
  right:20rpx;
  top:30rpx;
}

.container-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 30rpx;
}

.container-content-item {
  display: flex;
  padding-bottom: 20rpx;
  flex-direction: row;
}

.container-content-item .title {
  margin-right:20rpx;
  color:rgb(237, 0, 0);
}

.container-content-item .title .border{
  font-size:22rpx;
  padding:2rpx 4rpx;
  border:1px solid #EA594C;
  border-radius:4rpx;
}

.container-content-item .desc {
  display: inline-block;
  text-align:left;
  color: #212121;
  flex:1;
}
.container-content-item .link-text{
  font-size:24rpx;
  color: #F21833;
  width:120rpx;
  margin-left:10rpx;
  margin-top:5rpx;
}
.container-content-item .link-more{
  display:inline-block;
  width:28rpx;
  height:28rpx;
}
.btn-know {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10001;
  height: 98rpx;
  background-color: rgb(237, 0, 0);
  color: white;
  font-size: 34rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
