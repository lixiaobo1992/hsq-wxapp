
/* 好会员弹窗 */
.member-modal{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 6;
  background-color: rgba(0,0,0,0.7);
  transition-property: bottom;
  transition-duration: 0.3s;
  transition-timing-function: ease-in-out;

}
.model-content{
  position:fixed;
  margin:auto;
  height:726rpx;
  width:610rpx;
  background: #F4F1EC;
  border-radius:24rpx;
  top:50%;
  margin-top:-405rpx;
  left:0;
  right:0;
}
.model-content  .member-modal-title{
  height:80rpx;
  line-height:80rpx;
  margin-top:56rpx;
  text-align:center;
  font-size:40rpx;
  color:#333;
  font-weight:bold;
}
.member-modal-title .member-modal-num{
  font-size:92rpx;
  font-weight:500;
  background-image: linear-gradient(135deg,#E0C48D,#AB9460);
  -webkit-background-clip:text;
  color: transparent;
}
.member-modal-con{
  display:flex;
  flex-direction: column;
  border:1rpx solid #D9BC8C;
  background:#fff;
  height:428rpx;
  border-radius:16rpx;
  margin:24rpx 18rpx;
  padding:24rpx 18rpx;
  overflow-y: scroll;
  z-index:1;
  background-image:url('https://img1.haoshiqi.net/miniapp/profile/vip-con-bottom_ccec0389c6.png');
  background-repeat: no-repeat;
  background-size: 312.6rpx 269.2rpx;
  background-position: right bottom;
}
.member-modal-con .member-modal-item{
  display:flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom:32rpx;
  height:64rpx;
  line-height:64rpx;
  flex-shrink: 0;
}
.member-modal-con .left-icon{
  width:64rpx;
  height:64rpx;
}
.member-modal-con .left-title{
  margin-left:10rpx;
  font-size:28rpx;
  color:#333;
  font-weight:500;
}
.member-modal-con .right-desc{
  font-size:24rpx;
  color:#666;
}
.member-modal .bottom-btn{
  width:550rpx;
  height:80rpx;
  line-height:80rpx;
  background: #333333;
  border-radius: 40rpx;
  text-align:center;
  color:#fff;
  margin: 26rpx auto;
}
.member-modal .close-icon{
  width:64rpx;
  height:64rpx;
  position:fixed;
  bottom:160rpx;
  left:0;
  right:0;
  margin:auto;
}
