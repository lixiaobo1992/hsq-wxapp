.c-product-slider{
  width: 100%;
  overflow: hidden;
}
.c-product-slider .slider-box{
  width: 100%;
  overflow: hidden;
  padding-bottom: 10rpx;
}
.c-product-slider .slider-goods-box{
  width: auto;
  overflow-x: auto;
  display: flex;
  white-space:nowrap;
  flex-flow:row nowrap;
  justify-content: flex-start;
}
.c-product-slider .goods-box{
  flex: 0 0 auto;
  overflow: hidden;
  background: #ffffff;
  margin-block-start: 0rpx;
  margin-block-end: 0rpx;
}
.c-product-slider .goods-img-box{
  width: 200rpx;
  height: 200rpx;
  position: relative;
}
.c-product-slider .goods-img-box .img-box{
  width: 100%;
  height: 100%;
  /* background-image: url('https://img1.haoshiqi.net/miniapp/not-img2_0056f25dcd.png');
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center center; */
}
.c-product-slider .row3-status-img{
  position: absolute;
  width: 96rpx;
  height: 96rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 3;
}
.c-product-slider .img-label{
  position: absolute;
  top: 0;
  left: 0;
  width: 200rpx;
  height: 200rpx;
  z-index: 2;
  overflow: hidden;
}
.c-product-slider .icon-img{
  width: 100%;
}
.c-product-slider .goods-text-box{
  margin-inline-start: 0rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  width: 200rpx;
}
.c-product-slider .goods-title{
  font-size: 24rpx;
  color: #333;
  height: 64rpx;
  line-height: 32rpx;
  padding: 0 10rpx;
  width: 200rpx;
}
.c-product-slider .goods-price-box{
  color: #F21833;
  line-height: 40rpx;
  padding: 0 10rpx;
}
.c-product-slider .price-integer{
  font-size: 28rpx;
  height: 40rpx;
  font-weight: bold;
}
.c-product-slider .price-decimals{
  font-size: 16rpx;
}
.c-product-slider .market-price{
  font-size: 20rpx;
  color: #999999;
  text-decoration: line-through;
  padding: 0 10rpx;
}
.c-product-slider .more-box{
  width: 200rpx;
  background: #ffffff;
  margin-block-start: 0;
  margin-block-end: 0;
}
.c-product-slider .more-box .img-box{
  width: 100rpx;
  height: 100rpx;
  margin: 110rpx 50rpx 0;
}

.goods-price-box .goods-vip-price{
  display:block;
  font-size:24rpx;
  line-height:44rpx;
}
.goods-price-box .vip-bg{
  background: #333;
  line-height:24rpx;
  display:inline-block;
}
.goods-price-box .img-vip{
  width:24rpx;
  height:24rpx;
  display:inline-block;
  border-radius: 4rpx;
}
.goods-price-box .vip-price {
  font-size:12px;
  color:#333;
  background: #FDFBEB;
  padding:0 4rpx;
  border-radius:4rpx;
}
