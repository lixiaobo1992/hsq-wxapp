}

.c-tofu-item:nth-of-type(1) {
  width: 40%;
  height: 100%;
}

.layout-1-1 .c-tofu-item {
  width: 50%;
  height: 100%;
}

.layout-1-11 .c-tofu-item:nth-of-type(n+2) {
