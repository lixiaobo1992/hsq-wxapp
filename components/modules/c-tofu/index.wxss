
.c-tofu{
  overflow: hidden;
  padding-top: 60%;
}
.c-tofu-box{
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  position: absolute;
  overflow: hidden;
}
.c-tofu-item {
  float: left;
  height: 50%;
}
.c-tofu-item .image{
  width: 100%;
  height: 100%;
