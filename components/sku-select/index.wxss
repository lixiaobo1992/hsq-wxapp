/* components/sku-select/index.wxss */
/* sku 选择弹窗 */
.sku-select-popup{
  /* position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 9; */
  position: relative;
}
.popup-mask{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background-color: rgba(0,0,0,0.7);
}
.sku-select-content{
  position: fixed;
  padding-left: 30rpx;
  padding-bottom: 100rpx;
  width: 100%;
  left: 0;
  bottom: -100%;
  z-index: 2;
  background-color: #fff;
  transition-property: bottom;
  transition-duration: 0.3s;
  transition-timing-function: ease-in-out;
}
.sku-select-content.show{
  bottom: 0;
}

.sku-select-content .product-complex{
  display: flex;
  padding-bottom: 30rpx;
  padding-top: 10rpx;
  padding-right: 30rpx;
  border-bottom: 1px solid #e1e1e1;
  position: relative;
}

.product-complex .sku-img{
  width: 250rpx;
  height: 250rpx;
  border: 2px solid #eee;
  border-radius: 10rpx;
  margin-right: 24rpx;
  background-color: #e1e1e1;
  margin-top: -85rpx;
}
.product-complex .sku-img image{
  width: 100%;
  height: 100%;
}

.product-complex .complex-info{
  flex: 1;
}
.product-complex .close-btn{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.complex-info .sku-price{
  font-size: 46rpx;
  color: #F73552;
  line-height: 66rpx;
}
.complex-info .sku-info{
  color: #999999;
  font-size: 26rpx;
  line-height: 32rpx;
}

.complex-info .sku-color333{
  color: #333333;
}



/* sku 选择组 */

.sku-warp{
  width: 100%;
  max-height: 600rpx;
  min-height: 400rpx;
  padding-bottom: 100rpx;
  position: relative;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

.sku-warp .sku-group{
  border-bottom: 1px solid #e1e1e1;
  padding-top: 24rpx;
  padding-bottom: 10rpx;
}

.sku-warp .sku-group .sku-group-name{
  font-size: 28rpx;
  color: #212121;
  display: flex;
  align-items: center;
}
.sku-warp .sku-group .sku-group-name text{
  font-size: 24rpx;
  color: #F40000;
  display: inline-block;
  margin-left: 10rpx;
}

.sku-warp .sku-group .sku-option{
  margin-top: 20rpx;
}

.sku-option .sku-item{
  display: inline-block;
  line-height: 33rpx;
  height: 20px;
  overflow: hidden;
  vertical-align: middle;
  border-radius: 50rpx;
  padding: 5rpx 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;

  border: 1px solid #F0EFEF;
  color: #999;
}
.sku-option .sku-item.active{
  color: #F73552;
  border-color: #F73552;
}
.sku-option .sku-item.disabled{
  color: #999;
  border: 1px solid #F0EFEF;
}
.sku-option .sku-item.available{
  border: 1px solid #F0EFEF;
  color: #212121;
}
/* 保质期样式 */
.sku-group.shelf-lefe .active{
  background-color: #F73552;
  color: #fff;
  border-color: #F73552;
}
/* 数量添加按钮 */

.sku-group.sum-select{
  display: flex;
  padding-right: 30rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: none;
}

.sum-control{
  width: 240rpx;
  border: 1px solid #E2E2E2;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  height: 60rpx;
  vertical-align: middle;
}
.sum-control .less,.sum-control .add{
  text-align: center;
  width: 70rpx;
  font-size: 30rpx;
  color: #999999;
}
.sum-control .sum{
  text-align: center;
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  vertical-align: middle;
  font-size: 28rpx;
  color: #212121;
  border-left: 1px solid #E2E2E2;
  border-right: 1px solid #E2E2E2;
}


/* 添加购物车／立即购买按钮 */
.sku-select-popup .btns-group{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  display: flex;
  align-items: center;
  z-index:9;
}
.sku-select-popup .btns-group .sku-btn{
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align: middle;
  text-align: center;
  font-size: 32rpx;
  border-radius: 0;
  color: #FFFFFF;
}
.sku-select-popup .btns-group .sku-btn.add-cart{
  background-color: rgba(153, 153, 153, 0.6);
}
.sku-select-popup .btns-group .add-cart.active{
  background-color: #FEA40D;
}
.sku-select-popup .btns-group .sku-btn.buy-btn{
  background-color: rgb(153, 153, 153);
}
.sku-select-popup .btns-group .buy-btn.active{
  background-color: #F40000;
}
.sku-select-popup .btns-group .sku-btn.cur{
  background-color: #F40000;
}

