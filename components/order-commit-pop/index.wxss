.c-title {
  font-size: 40rpx;
}

.modal {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* background-color: transparent; */
}

.modal .modal-pop-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 999;
  opacity: none;
}

.modal .modal-container {
  background-color: #f2f2f2;
  z-index: 1000;
  position: fixed;
  left: 0;
  width: 100%;
  bottom: 0;
  height: 60%;
  transform: none;
  /* transform: translateY(100%); */
  /* transition: all 2s ease; */
}

