
.fade-enter, .fade-leave /* .fade-leave-active below version 2.1.8 */ {
  opacity: 0;
  transform: translateY(20rpx);
}

.fade-enter.fade-enter-active, .fade-leave.fade-leave-active {
  opacity: 1;
  transform: translateY(0px);
}

.msg-box{
  max-width: 40%;
  height: 48rpx;
  position: fixed;
  top: 160rpx;
  left: 20rpx;
  z-index: 3;
  box-sizing: border-box;
}

.msg-item{
  height: 48rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  overflow: hidden;
  background-color: transparent;

  opacity: 0;
  transform: translateY(20rpx);

}


.msg-box .msg-item .msg-pic{
  flex-shrink: 0;
  position: relative;
  z-index: 2;
  width: 48rpx;
  height: 48rpx;
  background-color: #fff;
  border-radius: 100%;
  overflow: hidden;
}
.msg-box .msg-item .msg-pic image{
  width: 100%;
  height: 100%;
}

.msg-box .msg-item .msg-text{
  position: relative;
  z-index: 1;
  flex: 1;
  line-height: 48rpx;
  height: 48rpx;
  padding: 0 20rpx 0 40rpx;
  margin-left: -24rpx;
  color: #fff;
  font-size: 24rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 0 24rpx 24rpx 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  word-wrap: break-word;
}