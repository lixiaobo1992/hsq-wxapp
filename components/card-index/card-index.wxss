@import '../../components/price/index.wxss';

.view-sku {
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px solid rgb(226, 226, 226);
    background-color: white;
    padding: 20rpx 30rpx;
}

.view-image {
    width: 150rpx;
    height: 150rpx;
    flex-shrink: 0;
    margin: 0 40rpx 0 20rpx;
}

.view-image .image {
    width: 100%;
    height: 100%;
}

.view-sku-info {
    width: 100%;
    flex-grow: 1;
    flex-shrink: 1;
}

.sku-info {
    line-height: 1.2;
    min-height: 120rpx;
    display: flex;
    justify-content: space-between;
}

.sku-info .name{
    font-size: 30rpx;
    max-height: 75rpx;
}

.sku-info .tags {
    font-size: 24rpx;
    height: 35rpx;
    border: 1px solid rgb(237, 0, 0);
    color: rgb(237, 0, 0);
    padding: 0px 2rpx;
    margin-left: 10rpx;
    white-space: nowrap;
    flex-shrink: 0;
    display: flex;
    align-items: center;
}