/* components/search/search.wxss */
/* 搜索框 */
.search {
  /* position: fixed; */
  z-index: 100;
  background-color: white;
  width: 100%; 
  height: 100rpx;
  padding-top: 17rpx;
}

.sub-view {
  display: flex;
  align-items: center;
  background-color: rgb(250, 250, 248);
  margin: 0 30rpx;
  border-radius: 6rpx;
  height: 66rpx;
  padding-left: 20rpx;
}

.sub-view image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.sub-view text {
  flex: 1;
  font-size: 28rpx;
  color: rgb(153, 153, 153);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; 
  padding-right: 10rpx;
}