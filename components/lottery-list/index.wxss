/* components/lottery-list/index.wxss */

.lottery-item {
  width: 100%;
  padding-bottom: 10px;
  background-color: rgb(239, 239, 239);
}

.item-top {
  width: 100%;
  height: 352rpx;
  position: relative;
  background-color: #fff;
}

.item-top image {
  width: 100%;
  height: 100%;
  background-image: url('https://img1.haoshiqi.net/miniapp/not-img1_dab4753322.png');
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: center center;
}

.item-top view {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background-color: rgba(60, 60, 60, 0.55);
  text-align: center;
  color: #fff;
  font-size: 14px;
  font-family: "PingFangSC-Medium";
  line-height: 80rpx;
}

.item-bottom {
  width: 100%;
  overflow: hidden;
  background-color: #fff;
}

.goods-name {
  padding: 10rpx 30rpx;
  font: 28rpx "PingFang-Regular";
}

.item-bottom view {
  overflow: hidden;
}

.goods-price {
  float: left;
  height: 94rpx;
  padding: 0 20rpx 0 30rpx;
  color: #ed0000;
  font: 30rpx/94rpx "PingFang-Regular";
}

.goods-old-price {
  float: left;
  height: 94rpx;
  color: #b4b4b4;
  font: 24rpx/94rpx "PingFang-Regular";
  text-decoration: line-through;
}

.goods-btn {
  float: right;
  margin: 17rpx 30rpx 0 0;
  height: 60rpx;
  width: 160rpx;
  font: 28rpx/60rpx "PingFang-Regular";
  padding: 0;
  border: 1px solid;
  text-align: center;
  border-radius: 4px;
}

/* 马上抢 提醒我 开奖中  */
.goods-btn-normal {
  background-color: #ed0000;
  color: #fff;
  border-color: #ed0000;
}

/*取消提醒  */
.goods-btn-cancel {
  background-color: rgb(211, 210, 211);
  color: #fff;
  border-color: rgb(211, 210, 211);
}

/*中奖详情  */
.goods-btn-detail {
  background-color: #fff;
  border: 1px solid #ed0000;
  color: #ed0000;
}
