/* components/pin-buy/pin-buy.wxss */
.view-buy {
  display: flex;
  color: white;
  background-color: white;
  font-size: 24rpx;
  height: 100%;
}

.view-service {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 10rpx;
  position: relative;
}
.view-service:first-child{
  border-right: 1px solid #d8d8d8;
}
.view-service .icon {
  width: 50rpx;
  height: 50rpx;
}

.view-service .title {
  color: rgb(33, 33, 33);
}

.view-pin {
  flex: 2;
  background-color: rgba(237, 0, 0, 0.6);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  line-height: 1.2;
  position: relative;
}

.pin-price {
  font-size: 28rpx;
}

.group {
  background-color: rgb(237, 0, 0);
}

.cart-color{
  background-color:#FEA40D;
}

.gray-single {
  background-color: rgba(153, 153, 153, 0.6) !important;
}

.gray-group {
  background-color: rgb(153, 153, 153);
}

.activity-ready{
  flex: 4;
  background: #FF6D18;
  justify-content: space-evenly;
}
.activity-price{
  font-size: 30rpx;
}
.activity-time{
  font-size: 24rpx;
}

.view-pin .addCart{
  display:inline-block;
  width:100%;
  text-align: center;
  align-items: center;
  vertical-align: center;
  line-height:100rpx;
  font-size:32rpx;
}
/* 购物车上的红点 */
.view-service .badge {
  position: absolute;
  top: 10rpx;
  right: 26rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 6rpx;
  color: #fff;
  background: #fc0438;
  width: 12rpx;
  height: 12rpx;
  font-size: 0;
  overflow: hidden;
}
