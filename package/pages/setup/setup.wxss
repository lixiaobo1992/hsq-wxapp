



.cm-list {
  box-sizing: border-box;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.cm-list .cm-list-items .cm-list-item {
  display: flex;
  font-size: 30rpx;
  line-height: 1.5;
  color: #212121;
  min-height: 100rpx;
  align-items: center;
  padding-left: 24rpx;
  background: #fff;
}

.cm-list .cm-list-item .cm-list-item-bottom {
  display: block;
  position: absolute;
  width: 100%;
  border-bottom: 1rpx solid #e2e2e2;
  left: 0;
  bottom: 0;
  right: auto;
  top: auto;
}

.cm-list .cm-list-item .cm-list-item-thumb {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}

.cm-list .cm-list-item .cm-list-item-line {
  position: relative;
  display: flex;
  flex: 1;
  align-items: center;
  align-self: stretch;
  padding-right: 30rpx;
  padding-left: 10rpx;
  min-height: 80rpx;
  overflow: hidden;
}

.cm-list .cm-list-item.cm-list-item-top .cm-list-item-line {
  align-items: flex-start;
}

.cm-list .cm-list-item.cm-list-item-middle .cm-list-item-line {
  align-items: center;
}

.cm-list .cm-list-item.cm-list-item-bottom .cm-list-item-line {
  align-items: flex-end;
}

.cm-list .cm-list-item .cm-list-item-content {
  flex: 1;
  color: #212121;
  font-size: 28rpx;
  text-align: left;
  line-height: 1.5;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-top: 14rpx;
  padding-bottom: 14rpx;
}

.cm-list .cm-list-item .cm-list-item-content.initial{
  flex: initial
}

.cm-list .cm-list-item .badge{
  position: relative;
  flex: 1;
  height: 80rpx;
}
.cm-list .cm-list-item .badge text{
  position: absolute;
  left: 0rpx;
  top: 4rpx;
  display: inline-block;
  color: #fff;
  background-color: #ed0000;
  border-radius: 100rpx;
  min-width: 33rpx;
  height: 33rpx;
  line-height: 33rpx;
  padding: 0 9rpx;
  font-size: 28rpx;
  overflow: hidden;
}

.cm-list .cm-list-item.last .cm-list-item-bottom,.cm-list .cm-list-item:last-child .cm-list-item-bottom{
  border-bottom: none;
}

.cm-list .cm-list-item .cm-list-item-extra {
  flex-basis: 36%;
  color: #888;
  font-size: 28rpx;
  text-align: right;
  line-height: 1.5;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-top: .14rem;
  padding-bottom: .14rem;
}

.cm-list .cm-list-item .cm-list-item-line-wrap .cm-list-item-content, .cm-list .cm-list-item .cm-list-item-line-wrap .cm-list-item-extra {
  white-space: normal;
}

.cm-list .cm-list-item.cm-list-item-hover {
  background-color: #ddd;
}

.cm-list .cm-list-arrow {
  display: block;
  width: 25rpx;
  height: 25rpx;
  margin-left: 16rpx;
  background-image: url('data:image/svg+xml;charset=utf-8,<svg width="16" height="26" viewBox="0 0 16 26" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><g id="UI-KIT_基础元件" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd"><g id="9.9基础元件" transform="translate(-5809.000000, -8482.000000)" fill="#999999"><polygon id="Disclosure-Indicator" points="5811 8482 5809 8484 5820.5 8495 5809 8506 5811 8508 5825 8495"></polygon></g></g></svg>');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: 50% 50%;
  visibility: hidden;
  transition: transform 0.3s;
}

.cm-list .cm-list-arrow.cm-list-arrow-horizontal {
  visibility: visible;
}

.cm-list .cm-list-arrow.cm-list-arrow-vertical {
  visibility: visible;
  transform: rotate(90deg);
}

.cm-list .cm-list-arrow.cm-list-arrow-vertical-up {
  visibility: visible;
  transform: rotate(270deg);
}
