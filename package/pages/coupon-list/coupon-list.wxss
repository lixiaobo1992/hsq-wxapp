/* pages/coupon-list/coupon-list.wxss */
@import '/components/foot/foot.wxss';
@import '/components/pull-loading/index.wxss';

page {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}
.page-coupon-list{
  height: 100%;
}
scroll-view {
  height: 100%;
}


.page-coupon{
  position: relative;
  width: 100%;
  height: 100%;
  flex: 1;
  padding-top: 160rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.coupon-header{
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  width: 100%;

}



/* 领券 */
.add-coupon-input {
  width: 100%;
  height: 80rpx;
  padding: 0 40rpx 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: white;
  overflow: hidden;
}

.add-coupon-input .add-scan {
  height: 100%;
  width: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-coupon-input .add-scan image {
  width: 44rpx;
  height: 44rpx;
}


.add-coupon-input .add-input {
  flex: 1;
  padding-left: 25rpx;
  border-left: 1px solid rgb(226, 226, 226);
}

.add-coupon-input .add-input .input {
  background-color: #F4F4F4;
  font-size: 24rpx;
  color: rgb(33, 33, 33);
  height: 50rpx;
  align-self: center;
  width: 100%;
  box-sizing: border-box;
}

.add-coupon-input .add-input .placehoder{
  color: rgb(153, 153, 153);
  font-size: 24rpx;
  align-content: center;
}

.add-coupon-input .add-btn {
  height: 50rpx;
  padding: 0 10rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 50rpx;
  margin-left: 20rpx;
  background-color: #FF002B;
  color: #fff;
}

.add-coupon-input .add-btn::after{
  display: none;
}

.coupon-type{
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
}
.coupon-type .type-item{
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 4rpx solid #fff;
  font-size: 28rpx;
  color: #333333;
  text-align: center;
}
.coupon-type .type-item.active{
  border-bottom: 4rpx solid #F21833;
  color: #F21833;
}


/* 使用说明|已失效优惠券 */
.help-box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 76rpx;
  color: #999;
  font-size: 28rpx;
}

.help-box .more {
  padding-top: 8rpx;
  padding-left: 4rpx;
}

/* 优惠券列表 */

.coupon-list{
  padding: 0 30rpx;
}

.coupon-cell {
  position: relative;
  display: flex;
  overflow: hidden;
  width: 100%;
  border-radius: 10rpx;
  margin-bottom: 20rpx;

  background-color: #CCCCCC;
  color:#fff;
}

.coupon-left{
  flex: 1;
  padding: 20rpx;
  overflow: hidden;
}

.coupon-left .coupon-head{
  display: flex;
  align-items: center;
}

.coupon-left .coupon-head .coupon-pirce{
  font-size: 60rpx;
  font-weight: bold;
}
.coupon-left .coupon-head .coupon-name{
  font-size: 24rpx;
  flex: 1;
  margin-left: 10rpx;
}

.coupon-left .coupon-sub-title{
  font-size: 24rpx;
  line-height: 36rpx;
}
.coupon-left .coupon-end-time{
  font-size: 24rpx;
  line-height: 36rpx;
}
.coupon-left .coupon-detail-btn{
  font-size: 24rpx;
  line-height: 36rpx;
  color: #666666;
  position: relative;
  padding-right: 20rpx;
  display: inline-block;
}
.coupon-left .coupon-detail-btn::after{
  content: '';
  display: block;
  width: 10rpx;
  height: 10rpx;
  border-right: 1px solid #666;
  border-bottom: 1px solid #666;
  transform: rotate(45deg);
  position: absolute;
  right: 0;
  top:10rpx;
}
.coupon-left .coupon-detail{
  /* display: none; */
  font-size: 24rpx;
  color: #666666;
  line-height: 34rpx;
}

.coupon-right{
  width: 220rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border-left: 1px dashed #fff;
  position: relative;
}
.coupon-right::before,.coupon-right::after{
  content: '';
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 100%;
  background-color: #f5f5f9;
  position: absolute;
  left: -16rpx;
}
.coupon-right::before{
  top: -15rpx;
}
.coupon-right::after{
  bottom: -15rpx;
}

.coupon-right .coupon-btn{
  width: 160rpx;
  height: 64rpx;
  border-radius: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background-color: #fff;
  font-size: 32rpx;
  color: #999999;
}
/* 可用券 */
.coupon-cell.available {
  background-color: #f7e8eb;
  color:#EA594C;
}
.coupon-cell.available .coupon-right{
  border-left: 1px dashed #EA594C;
}
.coupon-cell.available .coupon-right .coupon-btn{
  background-color: #EA594C;
  box-shadow: 0 2px 4px 0 #F8B5AF;
  color: #fff;
}

.coupon-cell.used .coupon-right .coupon-btn{
  color: #F21833;
}

/* 箭头样式 */
.icon-arrow::after {
  display: inline-block;
  transform-origin: center;
  content: '';
  width: 12rpx;
  height: 12rpx;
  color: inherit;
  border-color: currentColor;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  margin-left: 4rpx;
}

.icon-arrow-top::after {
  border-width: 1px 0 0 1px;
  margin-bottom: -1px;
}

.icon-arrow-right::after {
  border-width: 1px 1px 0 0;
  margin-bottom: 6rpx;
  margin-left: -6rpx;
}

.icon-arrow-bottom::after {
  border-width: 0 1px 1px 0;
  margin-bottom: 6rpx;
}

.icon-arrow-left::after {
  border-width: 0 0 1px 1px;
}

.icon-arrow-big::after{
  width: 16rpx;
  height: 16rpx;
}
