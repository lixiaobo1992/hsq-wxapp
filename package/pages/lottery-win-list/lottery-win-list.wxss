/* pages/lottery-win-list/lottery-win-list.wxss */
@import '../../../components/separator/separator.wxss';

.page-lottery-win{
  height: 100%;
}
/* 失效商品 */
.view-expired {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  background-color: white;
  padding-top: 40%;
}

.view-expired .icon {
  width: 196rpx;
  height: 78rpx;
  padding-bottom: 80rpx;
}

.view-expired .title {
  font-size: 40rpx;
  color: rgb(33, 33, 33);
  font-weight: 700;
}
/* end */

/* headerView */
.view-header {
  width: 100%;
  height: 180rpx;
  background-color: white;
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.view-img {
  width: 221rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.header-img {
  width: 131rpx;
  height: 52rpx;
}

.change-size {
  width: 221rpx;
  height: 137rpx;
}

.header-sub {
  flex: 1;
  padding-left: 40rpx;
  font-size: 24rpx;
  color: rgb(153, 153, 153);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.header-title {
  font-size: 32rpx;
  color: rgb(33, 33, 33);
}

.view-arrow {
  padding-right: 50rpx;
}

.share-arrow {
  flex-shrink: 0;
  width: 86rpx;
  height: 106rpx;

}
/* end  */

/* 中奖list  */
.view-list {
  padding: 20rpx 40rpx;
  background-color: white;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;

}

.view-user {
  display: flex;
  align-items: center;
}

.user-img {
  width: 80rpx;
  height: 80rpx;
  background-color: red;
}

.user-name {
  padding-left: 20rpx;
  font-size: 28rpx;
  color: rgb(33, 33, 33);
}

.view-order {
  font-size: 24rpx;
  color: rgb(153, 153, 153);
  padding-right: 30rpx;
}
/* end  */

/* 更多抽奖团 */
.view-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  background-color: rgb(237, 0, 0);
  color: white;
  font-size: 32rpx;
  text-align: center;
  line-height: 98rpx;
}
/* end */
