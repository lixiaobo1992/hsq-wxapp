/* pages/view-history/view-history.wxss */

@import '/components/card/index.wxss';
@import '/components/foot/foot.wxss';
@import '/components/pull-loading/index.wxss';

/* page {
  background-color: #E2E2E2;
} */
.page-history{
  height: 100%;
}
.view-count {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #212121;
  margin-top: 1px;
  padding-left: 30rpx;
  background-color: #fff;
  position: relative;
}

.manager-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 80rpx;
}

.cell {
  background-color: #fff;
  padding: 25rpx 30rpx;
  width: 100%;
  margin-top: 1px;

  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.left-content {

  flex-shrink: 0;
}

.select {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  /* padding-top: 80rpx; */
  vertical-align: middle;
  margin-right: 20rpx;
}

.icon_view {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  vertical-align: middle;
  position: relative;
}

.icon {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  background-image: url('https://img1.haoshiqi.net/miniapp/not-img2_0056f25dcd.png');
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: center center;
}

.no_sell {
  position: absolute;
  top: 0;
  left: 0;
  margin: 40rpx;
  width: 120rpx;
  height: 120rpx;
}


.right-content {
  position: relative;
  margin-left: 20rpx;

  flex-shrink: 1;
  flex-basis: 100%;
}

.desc {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #212121;
  line-height: 40rpx;


}

.price {
  position: absolute;
  left: 0;
  bottom: 0;

  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #ED0000;
}

.price text {
  font-size: 39rpx;
}

.find-similar {
  position: absolute;
  right: 150rpx;
  bottom: 0;
  border: 1px solid #999999;
  border-radius: 8rpx;
  width: 130rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #212121;
}

.buy {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 130rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #fff;
  border-radius: 8rpx;
}

.bgred {
  background-color: #ED0000;
}

.bggray {
  background-color: #999999;
}

.emptyContainer {
  background-color: #fff;
  padding-bottom: 70rpx;
  margin-top: 1px;
}

.noGoodsDesc {
  padding-top: 70rpx;
  padding-bottom: 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #212121;
  text-align: center;
  display: block;
}

.goShopping {
  border: 1px solid #ED0000;
  border-radius: 8rpx;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #ED0000;
  text-align: center;
  line-height: 80rpx;
  width: 400rpx;
  margin-left: 175rpx;
}

.manager-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: #fff;
  width: 100%;
  height: 98rpx;
}

.manager-panel view {
  display: inline-block;
  width: 50%;
}

.select-all {

}

.select-all image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 30rpx;
}

.select-all text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666666;
  line-height: 98rpx;
  margin-left: 15rpx;
  vertical-align: middle;
}

.delete {
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 98rpx;
  background: #ED0000;
}

.title-bar {
  height: 88rpx;
  background-color: #fff;
  margin-top: 20rpx;
  margin-bottom: 2px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title-bar image {
  width: 165rpx;
  height: 36rpx;

}

 /* 不可见 */
.invisible {
  display: none;
}
